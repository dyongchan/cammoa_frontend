{
  "compilerOptions": {
    "baseUrl": ".", //경로 설정 기준
    "paths": {
      //경로 별칭 설정
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layout/*": ["src/layout/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "build"] //타입 검사 제외 디디렉토리
}
